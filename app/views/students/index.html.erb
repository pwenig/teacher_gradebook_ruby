
<div class="container" id="main-form">
  <div class="report">
    <h2>History Grades</h2>

    <table class="table table-bordered table-hover" id="report-table">
      <thead>
      <tr>
        <th>Student Name</th>
        <th>Grade</th>
        <th></th>
      </tr>
      </thead>
      <tbody>

      <% @students.each do |student| %>
        <tr style="background-color: <%= student.status %> ">
          <td><%= student.name %></td>
          <td><%= student.grade %></td>
          <td id="edit-student"><%= link_to "Edit", student_path(student), :method => :get %> || <%= link_to "Delete", student_path(student), :method => :delete %></td>
        </tr>
      <% end %>

      <tr>
        <td id="add-student"><%= link_to "Add Student", new_student_path, :method => :get  %></td>
        <td></td>
        <td></td>
      </tr>
      </tbody>
    </table>


    <h3>Class Summary:</h3>
    <h4>Min Grade: <%= @minimum_grade %> </h4>
    <h4>Max Grade: <%= @maximum_grade %> </h4>
    <h4>Average Grade: <%= @average_grade %> </h4>

  </div>

</div>


